{
  "type": "origins:multiple",
  "name": "§6§lInterdimensional Hunter",
  "description": "While lurking in the Upside Down, you can sense players (and villagers) in the Overworld above. Glowing markers appear at their locations, allowing you to track your prey across dimensions before tearing through to claim them.",
  "hunt_function": {
    "type": "origins:action_over_time",
    "interval": 20,

    "condition": {
      "type": "origins:dimension",
      "dimension": "demo:upside_down"
    },

    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "function demo:update_dimension_tags"
        },
        {
          "type": "origins:execute_command",
          "command": "execute if dimension demo:upside_down run function demo:forceload_overworld_chunks"
        },
        {
          "type": "origins:execute_command",
          "command": "function demo:track_players"
        }
      ]
    }
  },
  "Forceload_upside_down": {
      "type": "origins:action_over_time",
    "interval": 20,

    "condition": {
      "type": "origins:dimension",
      "dimension": "minecraft:overworld"
    },

    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "function demo:forceload_upside_down_chunks"
        }
      ]
    }
  },
  "remove_forceload": {
    "type": "origins:action_over_time",
    "interval": 600,
    "entity_action": {
      "type": "origins:execute_command",
      "command": "execute unless dimension demo:upside_down run forceload remove all"
    }
  },
  "glow": {
    "type": "origins:entity_glow",
    "bientity_condition": {
        "type": "origins:target_condition",
        "condition": {
            "type": "origins:entity_type",
            "entity_type": "minecraft:armor_stand"
        }
    },
    "use_teams": false,
    "red": 1.0,
    "green": 0.4,
    "blue": 0.0
  }
}
